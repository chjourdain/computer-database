<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan
		base-package="com.excilys.formation.computerdatabase.persist.dao.mapper" />
	<context:component-scan
		base-package="com.excilys.formation.computerdatabase.service.impl" />
	<context:component-scan
		base-package="com.excilys.formation.computerdatabase.persist.dao.impl" />

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://localhost/computer-database-db?zeroDateTimeBehavior=convertToNull" />
		<property name="username" value="admincdb" />
		<property name="password" value="qwerty1234" />
	</bean>
	<!--    <bean id="computerDtoValidator" class=" com.excilys.formation.computerdatabase.model.validator.ComputerDtoValidator" />-->

</beans>
